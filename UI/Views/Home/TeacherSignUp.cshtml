
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kayıt Ol</title>
    <!--TeacherSignUpSheet.css-->
    <link href="~/stylesheets/teachersignupsheet.css" rel="stylesheet" />
    <!--Bootstrap Links-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</head>
<body>
    <!--Main Page Button-->
    <div class="button-borders">
        <a href="/Home/Login">
            <button class="primary-button">
                Ana Sayfa
            </button>
        </a>
    </div>
    <!--Sign Up Form-->
    <div class="login_position">
        <form class="form" asp-action="TeacherSignUp" method="post">
            <input class="input" type="text" placeholder="Ad-Soyad" name="NameSurname">
            <select class="input" name="LessonID">
                <option value="LessonID" style="color:black;">Branş Seçiniz</option> 
                @foreach (var lesson in ViewBag.lessons)
                {
                    <option value="@lesson.LessonID" style="color:black;">@lesson.LessonName</option>
                }
            </select>
            <input class="input" type="text" placeholder="T.C. Kimlik Numarası" name="TCKimlikNo">
            <input class="input" type="password" placeholder="Şifre" name="Password">
            <center><button class="button">Kayıt Ol</button></center>
        </form>
    </div>
</body>
</html>
