@model TypeLayer.TeacherNotesViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Öğrenci Notları</title>
    <!-- Bootstrap Links -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <!--LoginSheet.css-->
    <link href="~/stylesheets/loginsheet.css" rel="stylesheet" />
</head>
<body>
    <!-- Main Page Button -->
    <div class="button-borders">
        <a href="/Home/TeacherIndex">
            <button class="primary-button">
                Ana Sayfa
            </button>
        </a>
    </div>
    <!-- Table -->
    <div style="padding: 30px;">
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Ad-Soyad</th>
                        <th>Birinci Sınav</th>
                        <th>İkinci Sınav</th>
                        <th>Proje</th>
                        <th>Ortalama Puan</th>
                        <th>Geçti Mi?</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var studentNotes in Model.StudentNotesList)
                    {
                        <tr>
                            <td>@studentNotes.Student.NameSurname</td>
                            <td>@studentNotes.Notes.FirstExam</td>
                            <td>@studentNotes.Notes.SecondExam</td>
                            <td>@studentNotes.Notes.Project</td>
                            <td>@studentNotes.Notes.AverageNote</td>
                            <td>@studentNotes.Notes.DidItPass</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
