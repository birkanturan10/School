@model TypeLayer.TeacherNotesViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Not Girişi</title>
	<!--Bootstrap Links-->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
	<!--LoginSheet.css-->
	<link href="~/stylesheets/loginsheet.css" rel="stylesheet" />
</head>
<body>
	<!--Main Page Button-->
	<div class="button-borders">
		<a href="/Home/TeacherIndex">
			<button class="primary-button">
				Ana Sayfa
			</button>
		</a>
	</div>
	<!--Table-->
	<div style="padding:50px;">
		<div class="container" style="padding:30px;width:300px;">
			<form asp-action="EnterNotes" method="post" asp-controller="Home">
				<div class="input-group input-group-sm mb-3">
					<select class="input" name="StudentID">
						<option value="StudentID" style="color:black;">Öğrenci Seçiniz</option>
						@foreach (var student in Model.Student)
						{
							<option value="@student.StudentID" style="color:black;">@student.NameSurname</option>
						}
					</select>

					<div>
					<span class="input-group-text" id="inputGroup-sizing-sm">Birinci Sınav:</span>
					<input name="FirstExam" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
					</div>
					<div>
					<span class="input-group-text" id="inputGroup-sizing-sm">İkinci Sınav:</span>
					<input name="SecondExam" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
					</div>
					<div>
					<span class="input-group-text" id="inputGroup-sizing-sm">Proje:</span>
					<input name="Project" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
					</div>
				</div>
				<div>
					<input type="submit" value="Kaydet" class="btn btn-dark" />
				</div>
			</form>
		</div>
	</div>
</body>
</html>
