@model TypeLayer.Lessons

@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Ders Ekle</title>
	<!--Bootstrap Links-->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
	<!--LoginSheet.css-->
	<link href="~/stylesheets/loginsheet.css" rel="stylesheet" />
</head>
<body>
	<!--Main Page Button-->
	<div class="button-borders">
		<a href="/Home/Login">
			<button class="primary-button">
				Ana Sayfa
			</button>
		</a>
	</div>
	<!--Add Lessons-->
	<div style="padding:100px;">
		<div class="container" style="padding:30px;width:300px;">
			<form asp-action="AddLesson">
				<div class="input-group input-group-sm mb-3">
					<span class="input-group-text" id="inputGroup-sizing-sm">Ders Adı:</span>
					<input asp-for="LessonName" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
				</div>
				<div>
					<input asp-action="AddLesson" type="submit" value="Kaydet" class="btn btn-dark" />
				</div>
			</form>
		</div>
	</div>
</body>
</html>
