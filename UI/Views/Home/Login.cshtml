@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Giriş Yap</title>
	<!--LoginSheet.css-->
	<link href="~/stylesheets/loginsheet.css" rel="stylesheet" />
	<!--Bootstrap Links-->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</head>
<body>
	<!--Are You Teacher?-->
	<div class="isteacher">
		<label>Öğretmen Misiniz?</label>
	</div>
	<br />
	<div class="button-borders">
		<a href="/Home/TeacherLogin">
		<button class="primary-button">
			Giriş Yap
		</button>
		</a>
		<a href="/Home/TeacherSignUp">
		<button class="primary-button">
			Kayıt Ol
		</button>
		</a>
	</div>
	<!--Add Lesson-->
	<div class="button-borders">
		<a href="/Home/AddLesson" class="addlessonposition">
			<button class="primary-button">
				Ders Ekle
			</button>
		</a>
	</div>
	<!--Login Form-->
	<div class="login_position">
		<form class="form" asp-action="Login" method="post">
			<input class="input" type="text" placeholder="T.C. Kimlik Numarası" name="TCKimlikNo">
			<input class="input" type="password" placeholder="Şifre" name="Password">
			<center><button class="button">Giriş Yap</button></center>
			<p style="color:white;">Daha önce kayıt olmadınız mı?<a style="color:orange;" href="/Home/SignUp">Kayıt olun.</a></p>
		</form>
	</div>
</body>
</html>
